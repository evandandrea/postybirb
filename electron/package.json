{
  "name": "PostyBirb",
  "version": "1.2.3",
  "description": "Multimedia crossposter for multimedia websites",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "DEVELOP=true electron main.js",
    "fake": "DEVELOP=true SFW=true FAKEPOSTS=true electron main.js",
    "clean": "rm -rf PBA/; rm -rf electron-dist/",
    "eb-unix": "electron-builder -m",
    "eb-linux": "electron-builder -l",
    "eb-windows": "electron-builder -w"
  },
  "repository": {
    "type": "git",
    "url": "https://mvdicarlo@github.com/mvdicarlo/postybirb.git"
  },
  "keywords": [
    "postybirb",
    "crossposter",
    "angular",
    "electron"
  ],
  "author": "Michael DiCarlo (michael.v.dicarlo@gmail.com)",
  "license": "BSD-3-Clause",
  "homepage": "",
  "build": {
    "appId": "com.lemonynade.postybirb",
    "productName": "PostyBirb",
    "publish": {
      "provider": "github",
      "owner": "mvdicarlo",
      "repo": "postybirb"
    },
    "directories": {
      "buildResources": "build",
      "output": "electron-dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/icon.icns",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}.${ext}",
      "icon": "icons/icon_256x256x32.png",
      "category": "Network",
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "snap": {
      "plugs": [
        "default",
        "network"
      ]
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "electron-context-menu": "^0.9.1",
    "electron-log": "^2.2.14",
    "electron-updater": "^3.2.3",
    "electron-window-state": "^4.1.1",
    "express": "^4.16.3",
    "lowdb": "^1.0.0",
    "mastodon-api": "^1.3.0",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "store": "^2.0.12",
    "uniqid": "^5.0.3",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "electron": "^3.1.1",
    "electron-builder": "~20.34.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0"
  }
}
